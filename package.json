{
  "name": "@arcanea/codex",
  "version": "1.0.0",
  "description": "OpenAI Codex/GPT integration for Arcanea Intelligence OS - Guardian agents for ChatGPT and OpenAI API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./assistants": {
      "types": "./dist/assistants.d.ts",
      "import": "./dist/assistants.js"
    },
    "./gpts": {
      "types": "./dist/gpts.d.ts",
      "import": "./dist/gpts.js"
    }
  },
  "files": [
    "dist",
    "gpts",
    "CLAUDE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/assistants.ts src/gpts.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"**/*.{js,ts,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,md,json}\"",
    "deploy:gpt": "node scripts/deploy-gpt.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["arcanea", "openai", "codex", "gpt", "chatgpt", "ai", "guardians"],
  "author": "FrankX <frank@frankx.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frankxai/codex-arcanea.git"
  },
  "dependencies": {
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.5.4",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
